{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "./build",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Intl",
      "ESNext.Symbol",
      "DOM"
    ],
    "newLine": "lf",
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "pretty": false,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "disableSizeLimit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
